<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vbLoginView" alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csit228.csit228_prefinalstabada.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Pane prefHeight="400.0" prefWidth="400.0">
         <children>
            <TextField fx:id="tfUsername" layoutX="148.0" layoutY="155.0" onMouseClicked="#onUsernameClick" style="-fx-border-color: black;" />
            <TextField fx:id="tfPassword" layoutX="148.0" layoutY="211.0" onMouseClicked="#onPasswordClick" style="-fx-border-color: black;" />
            <Button fx:id="btnSubmit" layoutX="160.0" layoutY="273.0" mnemonicParsing="false" onAction="#onSubmitClick" text="Submit" />
            <Text layoutX="158.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login" />
            <Text layoutX="78.0" layoutY="172.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
            <Text layoutX="80.0" layoutY="228.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
         </children>
      </Pane>
   </children>


</VBox>
